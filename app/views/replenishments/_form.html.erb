    <%= form.label :employee_id %>
    <%= form.select :employee_id, options_from_collection_for_select(Employee.all, 'id', 'full_name') %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :type_id %>
    <%= form.select :type_id, options_from_collection_for_select(Type.all, 'id', 'name') %>
  </div>

  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_field :publisher %>
  </div>

  <div class="field">
    <%= form.label :items_count %>
    <%= form.number_field :items_count %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
