      <h2><%= pluralize(replenishment.errors.count, "error") %> prohibited this replenishment from being saved:</h2>

      <ul>
        <% replenishment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :foundation_id %>
    <%= form.select :foundation_id, options_from_collection_for_select(Foundation.all, 'id', 'name') %>
  </div>

